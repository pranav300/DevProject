<% provide(:title, 'Sign up') %>
<head>
    <title>Heading Example</title>   
    <div class="topnav">
        <a><%= link_to 'MBRICK.COM',welcome_index_path %>
        <div class="topnav-right">
        <a> <%= link_to 'Signup',register_path %></a>
        <a><%= link_to 'Login',login_path %></a>
        </div>
    </div>
</head>
<body>
<h1>Sign up</h1>

<div align="center">
  <div>
    <%= form_for :user do |f| %>
      <%= f.text_field :name, placeholder: "Name" %><br><br>
      <%= f.email_field :email, placeholder: "Email" %><br><br>
      <%= f.text_field :contact_number, placeholder: "Contact Number"%><br><br>
      <%= f.password_field :password, placeholder: "Password" %><br><br>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><br><br>
      <%= f.submit%><br>
      <%= link_to 'Already have a Account? Click Here to SignIn', login_path%>
    <% end %>
  </div>
</div>
</body>